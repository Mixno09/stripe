{% extends 'base.html.twig' %}

{% block title %}Hello StripeController!{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">

                            <label for="checkout-form" class="mb-3">Форма платежа</label>
                            <form id='checkout-form' method='post' action="{{ path('app_stripe_charge') }}">
                                <label for="price">Цена</label>
                                <input type="number" id="price" class="form-control" name="price" placeholder="Price">
                                {% if statusSubscribe is null %}
                                    <label for="subscribe">Оформить подписку</label>
                                        <select class="form-control" id="subscribe" name="subscribe">
                                            <option value="0">Без подписки</option>
                                            <option value="1">Подписаться</option>
                                        </select>
                                {% else %}
                                    <label for="cancel_subscribe">Отменить подписку</label>
                                    <br>
                                    <input type="checkbox" id="cancel_subscribe" class="form-check-input" name="cancel_subscribe">
                                    <input type="hidden" name="sessionId" value="{{ sessionId }}">
                                {% endif %}
                                <button id='pay-btn' class="btn btn-success" type="submit" style="margin-top: 20px; width: 100%;padding: 7px;">
                                    PAY
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}
